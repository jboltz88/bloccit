<h1>Sign Up Confirmation</h1>

<div class="row">
  <div class="col-md-8">
    <h3>Are you sure these values are correct?</h3>
  </div>
    <div class="col-md-8">
      <h5>
        <%= "Email: #{@user.email}" %>
      </h5>
  </div>
    <div class="col-md-8">
      <h5>
        <%= "Name: #{@user.name}" %>
      </h5>
    </div>
  <div class="col-md-8">
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    <%= link_to "No", new_user_path(@user), class: 'btn btn-danger' %>
  </div>
</div>